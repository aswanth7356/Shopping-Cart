<div class="row">
    <div class="col-md-6 m-auto">
        <div class="container mt-5" style="padding: 80px;">
            <h3 class="text-center">CREATE NEW ACCOUNT</h3>
            <form action="/signup" method="post">
           

                 <div class="form-group mt-3">
                    <label for="">Name</label>
                    <input type="text" class="form-control mt-3 mb-3" name="name" placeholder="Enter name">
                </div>

                <div class="form-group mt-3">
                    <label for="">Email address</label>
                    <input type="email" class="form-control mt-3 mb-3" name="email" placeholder="Enter email">
                </div>

                <div class="form-group">
                    <label for="exampleInputPassword1">Password</label>
                    <input type="password" class="form-control mt-3 mb-5" name="password" placeholder="Password">
                </div>

                
                <button type="submit" style="margin-left: 15rem;" class="btn btn-primary">SIGN UP</button>
            </form>
        </div>
    </div>
</div>