<div class="row">
    <div class="col-md-6 m-auto">
        <div class="container mt-5" style="padding: 80px;">
            <h3 class="text-center">LOGIN</h3>
            <form action="/login" method="post">
            {{#if loginErr}}
                <p class="error">{{loginErr}}</p>
            {{/if}}

                <div class="form-group mt-4">
                    <label for="">Email address</label>
                    <input type="email" class="form-control mt-3 mb-3" name="email" placeholder="Enter email">
                </div>

                <div class="form-group">
                    <label for="exampleInputPassword1">Password</label>
                    <input type="password" class="form-control mt-3 mb-3" name="password" placeholder="Password">
                </div>

                <a href="/signup" style="text-decoration:none">Create New Account ? </a>
                <button type="submit" style="margin-left: 22rem;" class="btn btn-primary">LOGIN</button>
            </form>
        </div>
    </div>
</div>